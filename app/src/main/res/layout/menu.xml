<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_registro"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/juegoNuevo"
        android:layout_width="324dp"
        android:layout_height="90dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/encabezado_menu"
        app:layout_constraintBottom_toTopOf="@+id/buttonComenzar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/encabezado_menu" />

    <Button
        android:id="@+id/buttonComenzar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="131dp"
        android:layout_marginLeft="131dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/boton_menu"
        android:onClick="ejecutarComenzar"
        android:text="@string/buttonComenzar"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonContinuar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/juegoNuevo" />

    <Button
        android:id="@+id/buttonContinuar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="131dp"
        android:layout_marginLeft="131dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/boton_menu"
        android:onClick="ejecutarContinuar"
        android:text="@string/buttonContinuar"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCreditos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonComenzar" />

    <Button
        android:id="@+id/buttonCreditos"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="131dp"
        android:layout_marginLeft="131dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/boton_menu"
        android:onClick="ejecutarCreditos"
        android:text="@string/buttonCreditos"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSalir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonContinuar" />

    <Button
        android:id="@+id/buttonSalir"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginEnd="131dp"
        android:layout_marginRight="131dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/boton_menu"
        android:onClick="ejecutarSalir"
        android:text="@string/buttonSalir"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCreditos" />

</androidx.constraintlayout.widget.ConstraintLayout>